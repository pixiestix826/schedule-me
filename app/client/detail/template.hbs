<h2>My Profile</h2>
{{#simple-form as |formValues|}}
  {{mdl-textfield value=formValues.name name="name" class="client-info__name" label=""}}
  {{mdl-textfield value=formValues.address name="address" class="client-info__address" label=""}}
  {{mdl-textfield value=formValues.email name="email" class="client-info__email" label=""}}
  {{mdl-textfield value=formValues.payment name="paymentType" class="client-info__payment" label=""}}

  {{mdl-button isRaised=true text='Edit' isAccent=true}}
  {{mdl-button isRaised=true text='Save' isAccent=true}}

{{/simple-form}}


<h2>Order History</h2>
<ul client-history>
{{#each model as |value|}}
  <li class="client-history-items">
    {{value.name}}
  </li>
{{/each}}
</ul>

{{#link-to "appointment.calender"}}
  {{mdl-button isRaised=true text='Make An Appointment' isAccent=true}}
{{/link-to}}
